<form>
  <!--Event Name -->
  <div class="form-group" ng-class="errors.name | errorClass">
    <label class="control-label"> Name </label>
    <input type="text" class="form-control" placeholder="Event name" ng-model="event.name">
    <span class="help-block">{{errors.name[0]}}</span>
  </div>
  
  <!-- Event Start Date-->
  <div class="form-group" ng-class="errors.start_date | errorClass">
    <label class="control-label"> Start Date </label>
    <div class="input-group">
      <input type="text" datepicker-popup="dd-MMMM" ng-model="event.start_date" placeholder="Start date"
        class="form-control" show-weeks="false"/>
      <span class="input-group-addon"><i class="icon-calendar"></i></span>
    </div>
    <span class="help-block">{{errors.start_date[0]}}</span>
  </div>
  <!--Event End Date -->
  <div class="form-group" ng-class="errors.end_date | errorClass">
    <label class="control-label"> End Date </label>
    <div class="input-group">
      <input type="text" datepicker-popup="dd-MMMM" ng-model="event.end_date" placeholder="End date"
        class="form-control" show-weeks="false"/>
      <span class="input-group-addon"><i class="icon-calendar"></i></span>
    </div>
    <span class="help-block">{{errors.end_date[0]}}</span>
  </div>
  <!-- Slot Length-->
  <div class="form-group" ng-class="errors.slot_length | errorClass">
    <label class="control-label"> Slot Length (minutes) </label>
    <%=select_tag 'slot_length', options_for_select([5,10,15,20,30,40,45,60]), {:class=>"form-control", 'ng-model'=>"event.slot_length"}%>
    <span class="help-block">{{errors.slot_length[0]}}</span>
  </div>
  <!--Students Per Slot -->
   <div class="form-group" ng-class="errors.students_per_slot | errorClass">
    <label class="control-label"> Students Per Slot </label>
      <input type="text" ng-model="event.students_per_slot" placeholder="students per slot" 
        class="form-control"/>
      <span class="help-block">{{errors.students_per_slot[0]}}</span>
  </div>
  <!--Require submission -->
  <div class="form-group">
    <label class="control-label">Require Submission</label>
    <input type="checkbox" ng-model="event.has_submissions"></input>
  </div>
  <div class="form-group" ng-show="event.has_submissions">
    <label class="control-label">Submission Deadline</label>
    <div class="row">
      <div class="input-group col-md-6">
        <input type="text" datepicker-popup="dd-MMMM-yyyy" ng-model="event.submission_deadline" placeholder="Deadline"
          class="form-control" show-weeks="false"/>
        <span class="input-group-addon"><i class="icon-calendar"></i></span>
      </div>
      <div class="col-md-4" style="margin-top: -37px">
      <timepicker ng-model="event.submission_deadline" hour-step="1"
          show-meridian="true"></timepicker>
      </div>
    </div>
  </div>
</form>